{
    "name": "mindy/mail-bundle",
    "type": "symfony-bundle",
    "description": "Mail bundle",
    "license": "MIT",
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "authors": [
        {
            "name": "Falaleev Maxim",
            "email": "max@studio107.ru"
        }
    ],
    "require": {
        "php": ">=7.0",
        "symfony/framework-bundle": "~3.0|~4.0",
        "symfony/swiftmailer-bundle": "~3.0|~4.0",
        "mindy/template-bundle": ">=4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Mindy\\Bundle\\MailBundle\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mindy\\Bundle\\MailBundle\\Tests\\": ""
        }
    }
}
